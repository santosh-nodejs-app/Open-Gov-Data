<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="aqi_table_row">
        <item name="android:textSize">15dp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:background">#b9e3f3</item>
        <item name="android:textColor">#0e76bc</item>
        <item name="android:padding">10dp</item>
    </style>

    <style name="aqi_table_col_1">
        <item name="android:textSize">15dp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:background">#b9e3f3</item>
        <item name="android:textColor">#0e76bc</item>
        <item name="android:padding">5dp</item>
    </style>

    <style name="aqi_table_col_2">
        <item name="android:textSize">15dp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:background">#ffffff</item>
        <item name="android:textColor">#333333</item>
        <item name="android:padding">5dp</item>
        <item name="android:textAlignment">center</item>
    </style>

    <style name="aqi_uppdate">
        <item name="android:textSize">14dp</item>
        <item name="android:paddingTop">5dp</item>
        <item name="android:paddingLeft">20dp</item>
    </style>

    <style name="aqi_pm">
        <item name="android:textSize">12dp</item>
        <item name="android:paddingTop">5dp</item>
        <item name="android:paddingLeft">20dp</item>
    </style>

    <style name="aqi_status">
        <item name="android:textSize">20dp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:paddingLeft">20dp</item>
    </style>

    <style name="splash_title">
        <item name="android:textSize">25dp</item>
        <item name="android:textColor">#FFFFFF</item>
        <item name="android:paddingTop">20dp</item>
    </style>

    <style name="dataset_title">
        <item name="android:textSize">15dp</item>
        <item name="android:textColor">#203e7c</item>
        <item name="android:paddingLeft">15dp</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="dataset_desc">
        <item name="android:textSize">12dp</item>
        <item name="android:textColor">#333333</item>
        <item name="android:layout_marginLeft">45dp</item>
    </style>

    <style name="dataset_sector">
        <item name="android:textSize">12dp</item>
        <item name="android:textColor">#333333</item>
        <item name="android:paddingLeft">15dp</item>
        <item name="android:paddingTop">5dp</item>
    </style>

    <style name="splash_error">
        <item name="android:textSize">15dp</item>
        <item name="android:textColor">#FFFFFF</item>
        <item name="android:paddingTop">80dp</item>
    </style>

    <style name="AppTheme.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />

    <style name="ToolbarColoredBackArrow" parent="AppTheme">
        <item name="android:textColorSecondary">@color/colorBackArr</item>
    </style>

    <style name="FullscreenTheme" parent="AppTheme">
        <item name="android:actionBarStyle">@style/FullscreenActionBarStyle</item>
        <item name="android:windowActionBarOverlay">true</item>
        <item name="android:windowBackground">@null</item>
        <item name="metaButtonBarStyle">?android:attr/buttonBarStyle</item>
        <item name="metaButtonBarButtonStyle">?android:attr/buttonBarButtonStyle</item>
    </style>

    <style name="FullscreenActionBarStyle" parent="Widget.AppCompat.ActionBar">
        <item name="android:background">@color/black_overlay</item>
    </style>
</resources>
